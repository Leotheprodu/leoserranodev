---
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import { Icon } from 'astro-icon/components';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<a
  class="no-underline"
  href={lang === 'en'
    ? '/Leonardo Serrano - Resume.pdf'
    : '/Leonardo-Serrano-CV.pdf'}
  download
>
  <button
    class="flex gap-2 items-center justify-center border rounded-xl w-56 h-12 py-4 px-2 dark:shadow-lg dark:hover:shadow-xl dark:border dark:border-slate-800 dark:hover:border-indigo-700 shadow-sm hover:shadow-lg transition active:shadow-xl dark:active:shadow-2xl font-semibold duration-300 ease-in-out"
    >{t('download.resume')}
    <Icon
      class="fill-black dark:fill-neutral-300"
      name="download"
      width={20}
      height={20}
    />
  </button>
</a>
