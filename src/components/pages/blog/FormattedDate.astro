---
import { getLangFromUrl } from '@/i18n/utils';

interface Props {
  date: Date;
}

const { date } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString(lang === 'en' ? 'en-us' : 'es-cr', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    })
  }
</time>
