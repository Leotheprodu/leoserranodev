---
import { DarkModeInput } from '../components/DarkModeInput/DarkModeInput.tsx';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import MainHead from './MainHead.astro';

interface Props {
    title: string;
    description?: string;
}
const { title = 'Nueva pagina', description = 'Esta es una Nueva Pagina' } =
    Astro.props as Props;
---

<!doctype html>
<html class="" lang="en">
    <MainHead {title} {description} />
    <body class="dark:bg-neutral-800 dark:text-neutral-300 bg-neutral-50 px-3">
        <main
            class="bg-white border-neutral-400 dark:border-slate-100 shadow-md dark:shadow-2xl gap-5 flex mt-20 max-w-[80rem] h-[50rem] m-auto items-center relative dark:bg-neutral-900"
        >
            <section
                class="h-full w-[25rem] dark:bg-neutral-800 border-r border-r-neutral-200 dark:border-r-neutral-900"
            >
                <div class="absolute top-[-8.5rem] right-[-12.7rem]">
                    <DarkModeInput client:only />
                </div>
                <Nav />
            </section>
            <section
                class="main-section w-full h-full px-14 py-28 overflow-y-scroll overflow-x-hidden"
            >
                <slot />
            </section>
        </main>
        <Footer />
        <style>
            .dark .main-section {
                &::-webkit-scrollbar {
                    width: 1rem;
                    background-color: rgb(38 38 38 / var(--tw-bg-opacity));
                }

                &::-webkit-scrollbar-thumb {
                    background-color: rgb(64 64 64 / var(--tw-border-opacity));
                }
            }
            .main-section {
                &::-webkit-scrollbar {
                    width: 1rem;
                    background-color: rgb(
                        245 245 245 / var(--tw-border-opacity)
                    );
                }

                &::-webkit-scrollbar-thumb {
                    background-color: rgb(
                        229 229 229 / var(--tw-border-opacity)
                    );
                }
            }
        </style>
    </body>
</html>
