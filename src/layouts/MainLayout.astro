---
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import MainHead from './MainHead.astro';
interface Props {
    title: string;
    description?: string;
}

const { title = 'Nueva pagina', description = 'Esta es una Nueva Pagina' } =
    Astro.props as Props;
---

<!doctype html>
<html class="" lang="en">
    <MainHead {title} {description} />
    <body class="dark:bg-neutral-900 bg-neutral-50 px-3">
        <main
            class="bg-white border shadow-md gap-5 flex mt-20 max-w-[80rem] h-[50rem] m-auto items-center relative overflow-y-scroll"
        >
            <section class="px-8 w-[20rem]">
                <Nav />
            </section>
            <section class="w-full h-full p-28">
                <slot />
            </section>
        </main>
        <Footer />
    </body>
</html>
