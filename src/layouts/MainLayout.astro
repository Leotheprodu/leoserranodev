---
import { DarkModeInput } from '../components/DarkModeInput/DarkModeInput.tsx';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import MainHead from './MainHead.astro';
import { ResponsiveNavButton } from '../components/ResponsiveNavButton';

interface Props {
    title: string;
    description?: string;
}
const { title = 'Nueva pagina', description = 'Esta es una Nueva Pagina' } =
    Astro.props as Props;
---

<!doctype html>
<html class="" lang="en">
    <MainHead {title} {description} />
    <body
        class="dark:bg-neutral-800 bg-neutral-50 flex flex-col justify-center items-center"
    >
        <main
            class="shadow-md dark:shadow-2xl flex flex-col h-full w-full m-auto items-center relative"
        >
            <header
                class="dark:bg-neutral-800 bg-neutral-50 grid grid-cols-2 lg:grid-cols-3 grid-rows-1 w-full h-[4rem] items-center z-50 fixed"
            >
                <div class="visible lg:invisible h-full col-start-1 col-end-2">
                    <ResponsiveNavButton client:only="react" />
                </div>

                <div class="scale-[.2] lg:col-start-3 lg:col-end-4">
                    <DarkModeInput client:only="'react" />
                </div>
            </header>

            <div
                class="flex mt-[4rem] w-full h-full lg:w-[65rem] lg:h-[50rem] relative border-neutral-400 dark:border-slate-100 dark:text-neutral-300 bg-white dark:bg-neutral-900"
            >
                <section
                    id="sectionNav"
                    class="fixed hidden mt-[4rem] lg:mt-0 lg:block left-0 top-0 lg:static h-full w-full lg:w-[25rem] dark:bg-neutral-800/70 backdrop-blur-sm lg:backdrop-blur-none border-r border-r-neutral-200 dark:border-r-neutral-900"
                >
                    <Nav />
                </section>
                <section
                    class="main-section w-full h-full lg:px-44 py-28 overflow-y-scroll px-6 sm:px-24 overflow-x-hidden"
                >
                    <slot />
                </section>
            </div>
            <Footer />
        </main>

        <style>
            .dark .main-section::-webkit-scrollbar {
                width: 1rem;
                background-color: rgba(38, 38, 38, 0.3);
            }
        </style>
    </body>
</html>
