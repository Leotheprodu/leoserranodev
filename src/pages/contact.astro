---
import MainLayout from '../layouts/MainLayout.astro';
import { ContactForm } from '../components/ContactForm.tsx';
---

<MainLayout
    title="Contact | Leonardo Serrano's Portfolio"
    description="Contact to Leonardo Serrano, a fullstack web developer from Costa Rica."
>
    <section class="flex flex-col gap-6">
        <h1>Contact</h1>
        <h2 class="text-lg">
            Feel free to use any of my social media channels to contact me, or
            simply fill out the contact form, and I will get back to you soon
        </h2>

        <ContactForm client:only />
    </section>
</MainLayout>
