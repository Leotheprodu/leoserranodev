---
import { getLangFromUrl } from '@/i18n/utils';
import MainLayout from '@/layouts/MainLayout.astro';
import { ContactForm } from '@components/pages/contact/ContactForm.tsx';
const lang = getLangFromUrl(Astro.url);
---

<MainLayout
  title="Contacto | Portafolio de Leonardo Serrano"
  description="Contacta a Leonardo Serrano, desarrollador full stack, para trabajar en tu próximo proyecto."
>
  <section class="flex flex-col gap-6">
    <h1>Contáctame</h1>
    <h2 class="text-lg">
      No dudes en usar cualquiera de mis redes sociales para contactarme, o
      simplemente llena el formulario de contacto, y me pondré en contacto
      contigo pronto.
    </h2>

    <ContactForm lang={lang} client:only />
  </section>
</MainLayout>
