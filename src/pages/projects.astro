---
import MainLayout from '../layouts/MainLayout.astro';
import personalProjects from '../data/personalProjects.json';
/* import clientProjects from '../data/clientProjects.json'; */
import ProjectCard from '../components/ProjectCard.astro';
---

<MainLayout
    title="Projects | Leonardo Serrano's Portfolio"
    description="Projects of Leonardo Serrano, a fullstack web developer from Costa Rica."
>
    <section class="flex flex-col gap-20">
        <div class="flex flex-col gap-4">
            <h1>Projects</h1>

            <p>
                Dive into my portfolio to explore a curated selection of
                flagship projects that underscore my professional approach and
                passion for innovation. These projects exemplify my commitment
                to excellence and demonstrate my ability to deliver impactful
                solutions. Welcome to a showcase of meaningful endeavors.
            </p>
        </div>
        <div class="flex flex-col gap-12">
            <h2>Personal Projects</h2>
            {
                personalProjects.map((project) => (
                    <ProjectCard project={project} />
                ))
            }
        </div>
        <!-- <div class="flex flex-col gap-12">
            <h2>Client Projects</h2>
            {clientProjects.map((project) => <ProjectCard project={project} />)}
        </div> -->
    </section>
</MainLayout>
